---
layout: layout.njk 
dot: ../.
nav: pages

pagination:
    data: destinations
    size: 1
    alias: destinations
permalink: "destinations/{{ destinations.name | slugify }}/"
---

<main id="destinations">

	<div class="ribbon-destinations" id="ribbon">

		<div class="heading-text">
    	<h4>{{destinations.name}} <span>{{destinations.nameSpan}}</span></h4>
			<p>{{destinations.subtitle}} {{destinations.departementProvinceState}}
				{% if destinations.title === "itin√©raire" %}
				<br>
				{% endif %}
			{{destinations.subtitle2}} {{destinations.country}}</p>		
		</div>

		<div class="panel_page_blur" ></div>
		<div class="panel_page">
			<img src="../../photos/ribbon/{{destinations.name | slugify}}.jpg" alt="">
			{% include "backButton.njk" %}
			<div class="link-destinations">
				<div class="links">
					<ul>
						{% for trip in destinations.trips %}
						<div class="mobile">
							{% if destinations.trips[1] == null %}
							{% else %}
								<li>
									<a class="link" href="#{{trip.days | slugify}}-{{trip.year | slugify}}">
										<p class="date">{{trip.days}} {{trip.year}}</p>
      						</a>
								</li>
							{% endif %}
						</div>
						<div class="desktop">
							<li>
								<a class="link" href="#{{trip.days | slugify}}-{{trip.year | slugify}}">
								{% if destinations.trips[1] == null %}
									<h6 class="date">{{trip.days}} <b>{{trip.year}}</b></h6>
									<p class="text">{{trip.text}}<br><i>{{trip.text2}}</i></p>
								{% else %}
									<h6 class="date">{{trip.days}} {{trip.year}}</h6>
									<p class="text">{{trip.text}}</p>
								{% endif %}									
      					</a>
							</li>
						</div>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	
	</div>

	{% include "upButton.njk" %}

	{% for trip in destinations.trips %}
  <section class="container-destinations">
  	<div class="date_section" id="{{trip.days | slugify}}-{{trip.year | slugify}}">
			<div class="mobile">
				<h6>{{trip.days}} <b>{{trip.year}}</b></h6>
				<p>{{trip.text}}<br><i>{{trip.text2}}</i></p>
			</div>
			<div class="desktop">
				{% if destinations.trips[1] == null %}
				{% else %}
					<h6>{{trip.days}} <b>{{trip.year}}</b></h6>
					<p>{{trip.text}}<br><i>{{trip.text2}}</i></p>
				{% endif %}
			</div>
			<a type="button" class="btn" data-bs-toggle="modal" data-bs-target="#{{trip.modal}}">voir le carousel de photos</a>
    </div>
    
    <!-- post modal -->
		<div class="modal fade" id="{{trip.modal}}" tabindex="-1" aria-labelledby="{{trip.modal}}Label" aria-hidden="true">
  		<div class="modal-dialog modal-xl">
  			<div class="modal-content">
  				<div class="modal-header">
  					<h5 class="modal-title" id="{{trip.modal}}Label">{{trip.modalTitle}}</h5>
  					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      		</div>

      		<div class="modal-body">
       						
						<!-- post carousel -->
						{% for carousel in trip.carousels %}

						<div id="carousel{{trip.modal}}Captions" class="carousel destinations slide">	

							<div class="carousel-indicators">
							  {% for photo in carousel.photos %}
									<button type="button" data-bs-target="#carousel{{trip.modal}}Captions" data-bs-slide-to="{{photo.slide}}" class="{{photo.active}}" aria-current="{{photo.ariaCurrent}}" aria-label="Slide {{photo.slide}}"></button>
								{% endfor %}
							</div>
							<div class="carousel-inner">
								{% for photo in carousel.photos %}
									<div class="carousel-item {{photo.active}}">
										<img src="../photos/{{photo.src}}" class="d-block " alt="{{photo.alt}}">
										<div class="carousel-caption d-none d-md-block">
											<p>{{photo.text}}</p>
										</div>
									</div>
								{% endfor %}
						  </div>										

							<button class="carousel-control-prev" type="button" data-bs-target="#carousel{{trip.modal}}Captions" data-bs-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Previous</span>
							</button>
							<button class="carousel-control-next" type="button" data-bs-target="#carousel{{trip.modal}}Captions" data-bs-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Next</span>
							</button>

						</div>	
						{% endfor %}								

      		</div>
    		</div>
  		</div>
		</div>

  	<div class="container">
      <div class="image-gallery-destination">
        {% for carousel in trip.carousels %}
          {% for photo in carousel.photos %}
            <img src="{{photo.src}}" alt="{{photo.alt}}">
          {% endfor %}
        {% endfor %}
      </div>
    </div>	

  </section>
	{% endfor %}

</main>