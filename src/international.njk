<main>

	{% include "ribbon.njk" %}

	{% include "upButton.njk" %}

	<div class="container">

		{% include "search.njk" %}

		<ul class="image-gallery">	
			{% for destination in destinations %}
				{% if destination.title === "international" %}
					<li class="destination">
						<a href="../destinations/{{destination.name | slugify}}/index.html">
							<img src="../photos/minis/{{destination.name | slugify}}.jpg" alt="">
							{% if destination.countryShort === "" %}
								<div class="overlay {{destination.keywords}}">{{destination.name}} {{destination.departementProvinceStateShort}}</div>
							{% else %}
								<div class="overlay {{destination.keywords}}">{{destination.name}} {{destination.departementProvinceStateShort}} | {{destination.countryShort}}</div>
							{% endif %}
						</a>
					</li>
				{% endif %}
			{% endfor %}		
		</ul>
	
	</div>

</main>
